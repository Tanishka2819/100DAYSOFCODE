//Q79: Perform diagonal traversal of a matrix.

/*
Sample Test Cases:
Input 1:
3 3
1 2 3
4 5 6
7 8 9
Output 1:
1 2 4 7 5 3 6 8 9

*/
#include <stdio.h>

int main() {
    int rows, cols, i, j, row_index, col_index;
    int direction = 1;

    printf("Enter the number of rows and columns: ");
    scanf("%d %d", &rows, &cols);

    int matrix[rows][cols];

    printf("Enter the matrix elements:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    printf("Output:\n");
    row_index = 0;
    col_index = 0;

    for (i = 0; i < rows * cols; i++) {
        printf("%d ", matrix[row_index][col_index]);

        if (direction == 1) {
            row_index--;
            col_index++;
        } else {
            row_index++;
            col_index--;
        }

        if (row_index < 0 || row_index >= rows || col_index < 0 || col_index >= cols) {
            if (direction == 1) {
                if (col_index >= cols) {
                    row_index += 2;
                    col_index--;
                }
                if (row_index < 0) {
                    row_index = 0;
                }
            } else {
                if (row_index >= rows) {
                    col_index += 2;
                    row_index--;
                }
                if (col_index < 0) {
                    col_index = 0;
                }
            }
            direction *= -1;
        }
    }

    printf("\n");

    return 0;
}
