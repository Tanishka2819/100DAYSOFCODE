//Q67: Insert an element in an array at a given position.

/*
Sample Test Cases:
Input 1:
4
10 20 30 40
2 15
Output 1:
10 20 15 30 40

*/
#include <stdio.h>

int main() {
    int current_size, position, new_element, i;

    printf("Enter the number of elements in the array: ");
    scanf("%d", &current_size);

    int arr[current_size + 1];

    printf("Enter %d integers:\n", current_size);
    for (i = 0; i < current_size; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the position (1-indexed) and the element to insert: ");
    scanf("%d %d", &position, &new_element);

    if (position < 1 || position > current_size + 1) {
        printf("Error: Invalid position for insertion.\n");
        return 1;
    }

    for (i = current_size; i >= position; i--) {
        arr[i] = arr[i - 1];
    }

    arr[position - 1] = new_element;

    printf("Output:\n");
    for (i = 0; i <= current_size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
