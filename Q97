//Q97: Print the initials of a name.

/*
Sample Test Cases:
Input 1:
John Doe
Output 1:
J.D.

*/
#include <stdio.h>

int main() {
    char str[1000];
    int i = 0;

    // Read input string
    fgets(str, sizeof(str), stdin);

    // Print first initial if it's a letter
    if ((str[0] >= 'A' && str[0] <= 'Z') || (str[0] >= 'a' && str[0] <= 'z')) {
        printf("%c.", str[0]);
    }

    // Loop through the string to find initials after spaces
    while (str[i] != '\0') {
        if (str[i] == ' ' && str[i + 1] != '\0' && str[i + 1] != '\n') {
            printf("%c.", str[i + 1]);
        }
        i++;
    }

    printf("\n");
    return
