//Q25: Write a program to implement a basic calculator using switch-case for +, -, *, /, %.

/*
Sample Test Cases:
Input 1:
4 2 +
Output 1:
6

Input 2:
10 3 %
Output 2:
1

Input 3:
15 5 /
Output 3:
3

*/
#include <stdio.h>

int main() {
    char op;
    int num1, num2;

    // Prompt user to enter expression
    printf("Input expression (e.g., 4 2 +): ");
    
    // Read the two numbers and the operator from the console
    scanf("%d %d %c", &num1, &num2, &op);

    // Use a switch-case statement to perform the operation
    switch(op) {
        case '+':
            printf("%d\n", num1 + num2);
            break;
        case '-':
            printf("%d\n", num1 - num2);
            break;
        case '*':
            printf("%d\n", num1 * num2);
            break;
        case '/':
            // Handle division by zero
            if (num2 != 0) {
                printf("%d\n", num1 / num2);
            } else {
                printf("Division by zero is not allowed.\n");
            }
            break;
        case '%':
            // Handle modulo by zero
            if (num2 != 0) {
                printf("%d\n", num1 % num2);
            } else {
                printf("Modulo by zero is not allowed.\n");
            }
            break;
        default:
            printf("Invalid operator\n");
            break;
    }

    return 0;
}
