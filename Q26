//Q26: Write a program to print numbers from 1 to n.

/*
Sample Test Cases:
Input 1:
5
Output 1:
1 2 3 4 5

Input 2:
3
Output 2:
1 2 3

*/
#include <stdio.h>

// A recursive function to print numbers
void print_numbers(int current, int n) {
    // Base case: Stop the recursion when the current number exceeds n
    if (current > n) {
        return;
    }

    // Print the current number
    printf("%d ", current);

    // Recursive call to print the next number
    print_numbers(current + 1, n);
}

int main() {
    int n;

    // Prompt the user to enter a number
    printf("Input a number: ");

    // Read the integer from the console
    scanf("%d", &n);

    // Call the recursive function starting from 1
    print_numbers(1, n);
    
    printf("\n");

    return 0;
}
