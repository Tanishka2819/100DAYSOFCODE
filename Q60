//Q60: Count positive, negative, and zero elements in an array.

/*
Sample Test Cases:
Input 1:
5
-1 0 1 2 -2
Output 1:
Positive=2, Negative=2, Zero=1

*/
#include <stdio.h>

int main() {
    int n; // Variable to store the size of the array
    int positive_count = 0; // Counter for positive numbers, initialized to 0
    int negative_count = 0; // Counter for negative numbers, initialized to 0
    int zero_count = 0;     // Counter for zeros, initialized to 0

    // Prompt user to enter the size of the array
    printf("Enter the size of the array: ");
    scanf("%d", &n);

    // Declare an array of size 'n'
    int arr;

    // Prompt user to enter the elements
    printf("Enter %d elements:\n", n);

    // Loop to read the elements from the user
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Loop to count positive, negative, and zero numbers
    for (int i = 0; i < n; i++) {
        if (arr[i] > 0) {
            positive_count++;
        } else if (arr[i] < 0) {
            negative_count++;
        } else {
            zero_count++;
        }
    }

    // Print the final counts
    printf("Positive=%d, Negative=%d, Zero=%d\n", positive_count, negative_count, zero_count);

    return 0;
}
