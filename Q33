//Q33: Write a program to check if a number is an Armstrong number.

/*
Sample Test Cases:
Input 1:
153
Output 1:
Armstrong

Input 2:
123
Output 2:
Not Armstrong

*/
#include <stdio.h>
#include <math.h>

int main() {
    int num, original_num, remainder, sum = 0, num_digits = 0;

    // Prompt the user to enter an integer
    printf("Input an integer: ");
    scanf("%d", &num);

    original_num = num;

    // First, count the number of digits
    int temp_num = num;
    while (temp_num != 0) {
        temp_num /= 10;
        ++num_digits;
    }

    // Now, calculate the sum of the power of each digit
    temp_num = num; // Reset temp_num to the original number
    while (temp_num != 0) {
        remainder = temp_num % 10;
        sum += pow(remainder, num_digits);
        temp_num /= 10;
    }

    // Check if the sum equals the original number
    if (sum == original_num) {
        printf("Armstrong\n");
    } else {
        printf("Not Armstrong\n");
    }

    return 0;
}
