Q133: Create an enum for months and print how many days each month has.

/*
Sample Test Cases:
Input 1:
FEB
Output 1:
28 or 29 days

*/
#include <stdio.h>

int main() {
    // Define an enumeration for months
    enum Month {
        JAN, FEB, MAR, APR, MAY, JUN, 
        JUL, AUG, SEP, OCT, NOV, DEC
    };

    // Declare a variable of type enum Month
    enum Month current_month;

    // Use a loop to iterate through all months (from JAN=0 to DEC=11)
    for (current_month = JAN; current_month <= DEC; current_month++) {
        // Use a switch statement to determine the number of days for each month
        switch (current_month) {
            case JAN: case MAR: case MAY: case JUL: 
            case AUG: case OCT: case DEC:
                // Months with 31 days
                switch(current_month) {
                    case JAN: printf("JAN has 31 days\n"); break;
                    case MAR: printf("MAR has 31 days\n"); break;
                    case MAY: printf("MAY has 31 days\n"); break;
                    case JUL: printf("JUL has 31 days\n"); break;
                    case AUG: printf("AUG has 31 days\n"); break;
                    case OCT: printf("OCT has 31 days\n"); break;
                    case DEC: printf("DEC has 31 days\n"); break;
                }
                break;
            
            case APR: case JUN: case SEP: case NOV:
                // Months with 30 days
                switch(current_month) {
                    case APR: printf("APR has 30 days\n"); break;
                    case JUN: printf("JUN has 30 days\n"); break;
                    case SEP: printf("SEP has 30 days\n"); break;
                    case NOV: printf("NOV has 30 days\n"); break;
                }
                break;
            
            case FEB:
                // February has a variable number of days due to leap years
                printf("FEB has 28 or 29 days\n");
                break;
        }
    }

    return 0;
}

/* 
* Note: The output format in the loop prints all months.
* To strictly match the sample test case (Input FEB -> Output 28 or 29 days), 
* one would need to prompt the user for input and use a single switch case for the input value. 
* The implementation above iterates and covers all cases as a general solution for Q133.
*/
