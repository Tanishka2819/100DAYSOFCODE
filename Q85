//Q85: Reverse a string.

/*
Sample Test Cases:
Input 1:
abcd
Output 1:
dcba

*/
#include <stdio.h>

int main() {
    char str[1000];
    int length = 0;

    // Read input including spaces
    fgets(str, sizeof(str), stdin);

    // Find length manually (excluding newline)
    while (str[length] != '\0') {
        if (str[length] == '\n') {
            break;
        }
        length++;
    }

    // Print characters in reverse order
    for (int i = length - 1; i >= 0; i--) {
        printf("%c", str[i]);
    }
    printf("\n");

    return 0;
}
