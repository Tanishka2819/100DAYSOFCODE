//Q69: Find the second largest element in an array.

/*
Sample Test Cases:
Input 1:
5
10 20 30 40 50
Output 1:
40

*/
#include <stdio.h>
#include <limits.h>

int main() {
    int size, i;
    int largest = INT_MIN;
    int second_largest = INT_MIN;

    printf("Enter the number of elements: ");
    scanf("%d", &size);

    if (size < 2) {
        printf("Output:\n-1\n");
        return 0;
    }

    int arr[size];

    printf("Enter %d integers:\n", size);
    for (i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    for (i = 0; i < size; i++) {
        if (arr[i] > largest) {
            second_largest = largest;
            largest = arr[i];
        } else if (arr[i] > second_largest && arr[i] != largest) {
            second_largest = arr[i];
        }
    }

    if (second_largest == INT_MIN) {
        printf("Output:\n-1\n");
    } else {
        printf("Output:\n%d\n", second_largest);
    }

    return 0;
}
