//Q68: Delete an element from an array.

/*
Sample Test Cases:
Input 1:
5
1 2 3 4 5
2
Output 1:
1 2 4 5

*/
#include <stdio.h>

int main() {
    int size, position, i;

    printf("Enter the number of elements: ");
    scanf("%d", &size);

    int arr[size];

    printf("Enter %d integers:\n", size);
    for (i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the position (1-indexed) of the element to delete: ");
    scanf("%d", &position);

    if (position < 1 || position > size) {
        printf("Error: Invalid position for deletion.\n");
        return 1;
    }

    for (i = position - 1; i < size - 1; i++) {
        arr[i] = arr[i + 1];
    }

    printf("Output:\n");
    for (i = 0; i < size - 1; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
