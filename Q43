//Q43: Write a program to check if a number is a strong number.

/*
Sample Test Cases:
Input 1:
145
Output 1:
Strong number

Input 2:
123
Output 2:
Not strong number

*/
#include <stdio.h>

// Function to calculate the factorial of a number
long long factorial(int n) {
    long long fact = 1;
    if (n == 0) {
        return 1;
    }
    for (int i = 1; i <= n; i++) {
        fact *= i;
    }
    return fact;
}

int main() {
    int num, original_num, remainder;
    long long sum = 0;

    // Prompt the user to enter an integer
    printf("Input an integer: ");
    scanf("%d", &num);

    original_num = num;

    // Loop to extract digits and calculate the sum of factorials
    while (num > 0) {
        remainder = num % 10;
        sum += factorial(remainder);
        num /= 10;
    }

    // Check if the sum of factorials equals the original number
    if (sum == original_num) {
        printf("Strong number\n");
    } else {
        printf("Not strong number\n");
    }

    return 0;
}
